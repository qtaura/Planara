{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "db/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}